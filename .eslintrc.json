{
  "root": true,
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:@next/next/recommended"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  },
  "rules": {
    "react/react-in-jsx-scope": "off", // Next.js doesn't require importing React
    "react/prop-types": "off", // Optional, turn on if you want to enforce prop-types
    "no-unused-vars": "off", // Optional, turn on if you want to enforce no-unused-vars
    "react/display-name": "off" // Optional, turn on if you want to enforce display names
  }
}
